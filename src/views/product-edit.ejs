<%- include("./partials/head") %>
<%- include("./partials/header-adm") %>

<main id="main-product-adm-edit">

  <div class="container">

    <h1 class="update-title-product-adm">Atualizar produto</h1>
  <% if(locals.error) { %>
    <h2><%= error.message %> </h2>
  <% } %>
    <form action="/product-adm/product-edit/<%= product.id %>?_method=put" method="POST">
      <input value="<%= product.name %>" class="form-control" type="text" name="name" placeholder="Name">
      <input value="<%= product.category %>" class="form-control" type="text" name="category" placeholder="Categoria">
      <input value="<%= product.brand %>" class="form-control" type="text" name="brand" placeholder="Marca">
      <input value="<%= product.price %>" class="form-control" type="number" name="price" placeholder="Preço">
      <input value="<%= product.inventory %>" class="form-control" type="number" name="inventory" placeholder="Estoque">
      <input value="<%= product.available %>" class="form-control" type="number" name="available" placeholder="Disponível">
      <input value="<%= product.urlImage %>" class="form-control" type="text" name="urlImage" placeholder="URL da imagem">
      <button type="submit" class="btn btn-success button-update-product-adm">Atualizar</button>
    </form>

  </div>
</main>
 
<%- include("./partials/footer") %>