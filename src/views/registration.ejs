        <div class="main-user-registration">
            <div class="right-user-registration">
                <div class="card-user-registration">
                    <h1 class="title-2">Cadastro</h1>
                    <form action="#" method="POST">
                        <div class="textfield">
                            <label class="label-1" for="nomecompleto">Nome Completo</label>
                            <input id="nomecompleto" class="input-1" type="text" name="nomecompleto"
                                placeholder="Digite ai!" required />
                        </div>
                        <div class="textfield">
                            <label class="label-1" for="nomeUsuario">Usu√°rio</label>
                            <input id="nomeUsuario" class="input-1" type="text" name="nomeUsuario"
                                placeholder="Nick name" required />
                        </div>
                        <div class="textfield">
                            <label class="label-1" for="email">E-mail</label>
                            <input id="email" class="input-1" type="email" name="email"
                                placeholder="Informe o seu melhor e-mail" required />
                        </div>
                        <div class="textfield">
