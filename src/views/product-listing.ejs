<%- include("./partials/head") %>
    <%- include("./partials/header") %>

        <!-- Div container, detalhando o produto a ser apresentado -->
        <div class="container">
            <!-- Div com o cabeçalho do conteúdo da pesquisa -->
            <div class="header-content">
                <!-- Lista ordenada -->
                <ol class="col-xs-12 col-sm-12 col-md-12">
                    <p>Busca</p>
                    <h1>Resultado da busca por
                        <span id="search-product">placa mãe</span>
                    </h1>
                </ol>
                <!-- Fechamento da div header-content -->
            </div>

            <!-- Div, contendo a opção de Ordernar por preço (Menor/Maior preço) . -->
            <div class="filter-order-by-listing col-xs-12 col-sm-12 col-md-12">
                <!-- Botão para ordenar os preços, abrindo uma lista não ordenada -->
                <button id="button-orderBy-listing" type="button" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">
                    <!-- Ícone -->
                    <span class="fa fa-exchange fa-rotate-90" aria-hidden="true"></span> Ordenar por
                    <span class="caret"></span>
                </button>
                <!-- Lista não ordenada -->
                <ul id="order-by-listing" class="dropdown-menu" role="menu" aria-labelledby="order-by-listing">
                    <li class="orderBy-item-listing">
                        <a class="filter-orderBy" href="#" data-pg="1" data-order="preco_asc"
                            data-manufacturer="0">Menor Preço</a>
                    </li>
                    <li class="orderBy-item-listing">
                        <a class="filter-orderBy" href="#" data-pg="1" data-order="preco_desc"
                            data-manufacturer="0">Maior Preço</a>
                    </li>
                </ul>
            </div>


            <!-- Conteúdo de área dos produtos -->
            <div class="area-product col-xs-12 col-sm-12 col-md-12">
                <!-- Div responsável pelos card-deck dos produtos -->
                <div class="card-deck">
                    <!-- Dividindo o conteúdo em 3 colunas -->
                    <% for (let index = 0; index < produtos.length; index++)  { %> 
                   
                    <div class="product-card-listing col-xs-12 col-sm-6 col-md-3">
                        <div class="card card-product">
                            <a href="/product/<%= produtos[index].id %>">
                                <img class="card-img-top-listing product-image-listing"
                                src="<%=produtos[index].urlImage %>"
                                alt="Imagem de capa do card">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title"><%=produtos[index].name %>
                                </h5>
                                <h6> <%=produtos[index].category %></h6>
                            </div>
                            <span class="sale-price"><%=produtos[index].price%></span>
                            <small class="form-payment">à vista no boleto</small>
                        </div>
                    
                        <!-- Fechamento da tag col-sm-6 col-md-3 -->
                    </div>
                    <%} %>

                    <!-- Fechamento da div responsável pelos card-deck dos produtos -->
                </div>
                <!-- Fechamento da div area-product -->
            </div>

            <!-- Fechamento da tag container -->
        </div>

        <%- include("./partials/footer") %>